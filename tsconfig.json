{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES6",
    "outDir": "ts",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "declaration.d.ts"]
}
